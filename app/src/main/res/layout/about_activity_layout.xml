<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        android:id="@+id/drawer_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/parent_layout"
        android:background="@drawable/gradient_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_below="@id/toolbar">

            <android.support.v7.widget.CardView
                android:id="@+id/ingredients_list_cardView"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:cardBackgroundColor="@color/light_color"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/icon_header"
                        android:layout_width="wrap_content"
                        android:layout_height="192dp"/>

                    <TextView
                        android:layout_marginTop="16dp"
                        android:text="@string/lores_ipsum"
                        android:textColor="@color/textView_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginTop="16dp"
                        android:text="Developed by Andrew Chyzh 2018"
                        android:textStyle="italic"
                        android:textAlignment="center"
                        android:textColor="@color/textView_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </android.support.v7.widget.CardView>

        </LinearLayout>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            app:title="About"
            app:titleTextColor="@color/light_color"
            style="@style/CustomToolbar"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        style="@style/CustomDrawerNavigationView"
        app:headerLayout="@layout/navigation_menu_header"/>

</android.support.v4.widget.DrawerLayout>